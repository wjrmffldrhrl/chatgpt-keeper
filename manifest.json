{
    "manifest_version": 3,
    "name": "chatgpt-keeper",
    "version": "1.1",
    "description": "Chrome extension to save ChatGPT conversations as markdown",
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://chat.openai.com/chat/*"],
            "css": ["style.css"],
            "js": ["lib/showdown.js", "script.js"]
        }
    ]
}
